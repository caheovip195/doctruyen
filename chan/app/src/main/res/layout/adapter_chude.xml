<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_them"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1" android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="90dp"
            android:layout_height="90dp">

            <com.meg7.widget.CustomShapeImageView
                android:id="@+id/img_them"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:shape="circle"
                android:scaleType="centerCrop"
                android:src="@drawable/sach"
                android:background="@drawable/my_custom_background"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_mieuta_chude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_them"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txtstt"
            android:layout_toRightOf="@+id/txtstt"
            android:gravity="center"
            android:text="@string/c_truy_n"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_them"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tac_gia"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtstt"
            android:layout_toEndOf="@+id/linearLayout2"
            android:layout_toRightOf="@+id/linearLayout2"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtstt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/linearLayout2"
            android:layout_toRightOf="@+id/linearLayout2"
            android:gravity="center"
            android:text="@string/_10"
            android:textSize="19sp"
            android:textColor="#ff0000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:background="#ff5a5a" />

        <TextView
            android:id="@+id/tac_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/linearLayout2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_toEndOf="@+id/linearLayout2"
            android:layout_toRightOf="@+id/linearLayout2"
            android:text="" />
    </RelativeLayout>
</LinearLayout>
