<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listchude_like"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/lnlayoutlike"
            android:layout_width="90dp"
            android:layout_height="90dp">

            <com.meg7.widget.CustomShapeImageView
                android:id="@+id/imgdoctruyen_like"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sach"
                app:shape="circle"
                android:background="@drawable/my_custom_background"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtdoctruyen_like"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout2"
            android:layout_alignLeft="@+id/txtsttdetai_like"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/txtsttdetai_like"
            android:layout_below="@+id/txtsttdetai_like"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtsttdetai_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="102dp"
            android:gravity="center"
            android:textColor="#ff5a5a" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="100dp"
            android:background="#c2ff9f" />
    </RelativeLayout>
</LinearLayout>
