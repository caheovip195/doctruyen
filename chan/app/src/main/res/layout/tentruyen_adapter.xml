<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listten"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/lntentruyen"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/my_custom_background">

            <ImageView
                android:id="@+id/imgten"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sach" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_custom_background_tieu_de"
            android:gravity="center"
            android:layout_above="@+id/txttendocthem"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtstt"
            android:layout_toEndOf="@+id/lntentruyen"
            android:layout_toRightOf="@+id/lntentruyen"
            android:textSize="17sp" />

            <TextView
                android:id="@+id/txtstt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/lntentruyen"
                android:layout_toRightOf="@+id/lntentruyen"
                android:background="@drawable/khung_so"
                android:textColor="#ff0000" />

        <TextView
            android:id="@+id/txttendocthem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lntentruyen"
            android:layout_alignEnd="@+id/txtten"
            android:layout_alignRight="@+id/txtten"
            android:gravity="right"
            android:text="Đọc tiếp..."
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignEnd="@+id/txttendocthem"
            android:layout_alignRight="@+id/txttendocthem"
            android:layout_below="@+id/txttendocthem"
            android:background="#ff5a5a" />
    </RelativeLayout>
</LinearLayout>
