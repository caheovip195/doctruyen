<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listten"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1" android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/lntentruyen"
            android:layout_width="90dp"
            android:layout_height="90dp">

            <com.meg7.widget.CustomShapeImageView
                android:id="@+id/imgten"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:shape="circle"
                android:scaleType="centerCrop"
                android:src="@drawable/sach"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_above="@+id/txttendocthem"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtstt"
            android:layout_toEndOf="@+id/lntentruyen"
            android:layout_toRightOf="@+id/lntentruyen"
            android:textSize="17sp" />

            <TextView
                android:id="@+id/txtstt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="19sp"
                android:text="@string/_10"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/lntentruyen"
                android:layout_toRightOf="@+id/lntentruyen"
                android:textColor="#ff0000" />

        <TextView
            android:id="@+id/txttendocthem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lntentruyen"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="@string/c_ti_p"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignEnd="@+id/txttendocthem"
            android:layout_alignRight="@+id/txttendocthem"
            android:layout_below="@+id/txttendocthem"
            android:background="#ff5a5a" />

        <ImageView
            android:id="@+id/nutlike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/like2" android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/tentacgia"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txtstt"
            android:layout_toLeftOf="@+id/nutlike"
            android:layout_toRightOf="@+id/txtstt"
            android:layout_toStartOf="@+id/nutlike"
            android:text="@string/t_c_gi" />
    </RelativeLayout>
</LinearLayout>
