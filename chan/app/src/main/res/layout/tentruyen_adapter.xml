<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listten"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">


            <ImageView
                android:id="@+id/imgten"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/anhdoctruyen" />

            <TextView
                android:id="@+id/txtten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txttendocthem"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtsttten"
                android:layout_toEndOf="@+id/imgten"
                android:layout_toRightOf="@+id/imgten"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txttenmieuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtten"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txtsttten"
                android:layout_toRightOf="@+id/txtsttten"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtsttten"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="#ff8e8e"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imgten"
                android:layout_toRightOf="@+id/imgten"
                android:text="10" />

            <TextView
                android:id="@+id/txttendocthem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgten"
                android:layout_alignParentEnd="true"
                android:textColor="#000000"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="Đọc tiếp..." />
        </RelativeLayout>
</LinearLayout>
